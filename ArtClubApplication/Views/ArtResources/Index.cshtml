@model IEnumerable<ArtClubApplication.Models.ArtResource>

@{
    ViewData["Title"] = "Resources";
}
<link rel="stylesheet" href="~/css/artresources.css"/>

<h1>Resources</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ArtResourceId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ArtResourceId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ArtResourceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
